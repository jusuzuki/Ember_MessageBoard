{{#if updateQuestionForm}}
  <h4>Update</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="user">User</label>
          {{input value=user id="user" placeholder=question.user}}
        </div>

        <div class="form-group">
          <label for="subject">Question</label>
          {{input value=subject id="subject" placeholder=question.subject}}
        </div>

        <div class="form-group">
          <label for="notes">Notes</label>
          {{input value=notes id="notes" placeholder=question.notes}}
        </div>

        <button {{action 'update' question}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
