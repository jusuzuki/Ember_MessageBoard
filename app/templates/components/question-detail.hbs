<div class="container">
  <div class="well">
     <h3>{{question.subject}}</h3>
     <h5>{{question.user}} </h5>
     <p>{{question.notes}}</p>
     {{update-question question=question update="update"}} <br>
     <button {{action 'delete' question}} class="btn btn-xs btn-default">Delete</button>
  </div>
  <hr>

  {{new-answer saveAnswer="saveAnswer" question=question}}

  <hr>
  {{#each question.answers as |answer|}}
    <div class="well">
        <strong>{{answer.user}}:</strong>
        <br>
        {{answer.text}}
        <br><br>
        <button {{action 'deleteAnswer' answer}} class="btn btn-xs btn-default">Delete Answer</button>
    </div>
  {{/each}}

</div>
